
@model List<News> 

<section id="about" class="about">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="section-title">
            <h2>@ViewBag.categ</h2>
        </div>
        @foreach (var item in Model)
        {
            <div class="row my-5">

                <div class="col-lg-6 aos-init aos-animate" data-aos="fade-right">
                    <img src="~/Images/News/@item.Image" class="img-fluid" alt="">
                </div>

                <div class="col-lg-6 pt-4 pt-lg-0 content aos-init aos-animate" data-aos="fade-left">
                    <h3>@item.Title</h3>
                    <h4>@item.Date</h4>
                    <p class="font-italic">@item.Topic</p>
                </div>
                
            </div>
            <center>
                <a class="btn btn-danger btn-lg" href="/Home/DeleteNews/@item.Id">Delete</a>
            </center>
        }
        </div>
</section>