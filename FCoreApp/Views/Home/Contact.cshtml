
@model ContactUs

<div class="contact">
    <form asp-controller="Home" asp-action="SaveContact" class="container my-4">
        <div class="form-row">
            <div class="col form-group">
                <input type="text" asp-for="Name" class="form-control" placeholder="Your Name">
                <span class="validate text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="col form-group">
                <input type="email" class="form-control" asp-for="Email" placeholder="Your Email">
                <span asp-validation-for="Email" class="validate text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Subject" placeholder="Subject">
            <span asp-validation-for="Subject" class="validate text-danger"></span>
        </div>
        <div class="form-group">
            <textarea class="form-control" asp-for="Message" rows="5" placeholder="Message"></textarea>
            <span asp-validation-for="Message" class="validate text-danger"></span>
        </div>
        @*<div class="mb-3">
            <div class="loading">Loading</div>
            <div class="error-message"></div>
            <div class="sent-message">Your message has been sent. Thank you!</div>
        </div>*@
        <div class="text-center"><button class="btn-info p-2" type="submit">Send Message</button></div>
    </form>
</div>