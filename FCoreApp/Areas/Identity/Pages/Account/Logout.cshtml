@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1 class="text-info text-center pt-3">@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link ">Click here to Logout</button>
            </form>
        }
        else
        {
            <p class="text-success text-center" style="font-size:20px">You have successfully logged out of the application.</p>
        }
    }
</header>