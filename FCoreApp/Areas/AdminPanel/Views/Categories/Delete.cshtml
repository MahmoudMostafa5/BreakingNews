@model FCoreApp.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-info text-center py-3">Delete @Model.Name</h1>

<h3 class="text-danger text-center py-3">Are you sure you want to delete this?</h3>
<div class="container">
    <hr />
    <dl class="row">
        <dt class="col-sm-3"></dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3"></dt>
        <dt class="col-sm-3"></dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-3"></dt>
    </dl>
    
    <form asp-action="Delete" class="text-center py-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
